<!-- Booking Section -->
<section id="spa-booking" class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <span class="subtitle text-primary">MAKE A RESERVATION</span>
                <h2 class="mb-4">Book Your Spa Experience</h2>
                <p class="lead mb-4">Indulge in the ultimate relaxation experience at our luxury spa. Reserve your treatment today.</p>

