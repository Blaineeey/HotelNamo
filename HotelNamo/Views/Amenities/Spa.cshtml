                                            <option>Couples Retreat (3.5 hours)</option>
                                        </optgroup>
                                    </select>
                                    <span asp-validation-for="Treatment" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="SpecialRequests" class="form-label"></label>
                                    <textarea asp-for="SpecialRequests" class="form-control" rows="3" placeholder="Any special requests or health concerns..."></textarea>
                                    <span asp-validation-for="SpecialRequests" class="text-danger"></span>
                                </div>
