                <div class="col-md-6 mb-4">
                    <div class="menu-item h-100">
                        <h4>Chocolate Lava Cake <span class="price">$12</span></h4>
                        <p>Warm chocolate cake with a molten center, served with vanilla ice cream</p>
                        <span class="dietary">V</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Dinner Menu -->
    <section id="dinner" class="menu-section">
        <h2 class="display-5 mb-4">Dinner</h2>
        <p class="text-center mb-5">Served daily from 6:00 PM to 10:00 PM</p>

        <div class="menu-category">
            <h3>Appetizers</h3>
            <div class="row menu-items">
                <div class="col-md-4 mb-4">
                    <div class="menu-item h-100">
                        <h4>Seared Scallops <span class="price">$19</span></h4>
