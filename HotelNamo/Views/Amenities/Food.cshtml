@{
    ViewData["Title"] = "HotelNamo Dining";
    Layout = "_UserLayout";
}

<div class="container my-5">
    <header class="text-center">
        <h2 class="about-title">Dining</h2>
        <h1 class="display-4">HotelNamo Dining</h1>
        <p class="lead">Experience culinary excellence at HotelNamo. Our chefs combine local ingredients with international techniques to create memorable dining experiences for our guests. From hearty breakfasts to elegant dinners, each meal is crafted with care to satisfy your palate and complement your stay.</p>
    </header>

    <div class="menu-nav">
        <button class="menu-btn active" data-menu="breakfast">Breakfast</button>
        <button class="menu-btn" data-menu="lunch">Lunch</button>
        <button class="menu-btn" data-menu="dinner">Dinner</button>
    </div>

    <!-- Breakfast Menu -->
    <section id="breakfast" class="menu-section active">
        <h2 class="display-5 mb-4">Breakfast</h2>
        <p class="text-center mb-5">Served daily from 6:30 AM to 10:30 AM</p>

        <div class="menu-category">
            <h3>Morning Starters</h3>
            <div class="row menu-items">
                <div class="col-md-4 mb-4">
                    <div class="menu-item h-100">
                        <h4>Continental Breakfast <span class="price">$18</span></h4>
                        <p>Selection of freshly baked pastries, seasonal fruits, yogurt, and granola</p>
                        <span class="dietary">V</span>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="menu-item h-100">
                        <h4>Seasonal Fruit Plate <span class="price">$14</span></h4>
                        <p>Assortment of fresh seasonal fruits with honey yogurt dip</p>
                        <span class="dietary">V</span><span class="dietary">GF</span>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="menu-item h-100">
                        <h4>Steel-Cut Oatmeal <span class="price">$12</span></h4>
                        <p>Served with brown sugar, dried fruits, and toasted nuts</p>
                        <span class="dietary">V</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="menu-category">
            <h3>Signature Breakfast</h3>
            <div class="row menu-items">
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="menu-item h-100">
                        <h4>Mountain Sunrise <span class="price">$22</span></h4>
                        <p>Two eggs any style with crispy bacon, roasted potatoes, grilled tomato, and toast</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="menu-item h-100">
                        <h4>Avocado Toast <span class="price">$16</span></h4>
                        <p>Multigrain toast topped with smashed avocado, poached eggs, and microgreens</p>
                        <span class="dietary">V</span>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="menu-item h-100">
                        <h4>Brioche French Toast <span class="price">$19</span></h4>
                        <p>Served with maple syrup, fresh berries, and whipped cream</p>
                        <span class="dietary">V</span>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="menu-item h-100">
                        <h4>Smoked Salmon Benedict <span class="price">$24</span></h4>
                        <p>English muffin topped with smoked salmon, poached eggs, and hollandaise sauce</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="menu-category">
            <h3>Beverages</h3>
            <div class="row menu-items">
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="menu-item h-100">
                        <h4>Freshly Brewed Coffee <span class="price">$5</span></h4>
                        <p>Regular or decaffeinated</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="menu-item h-100">
                        <h4>Selection of Teas <span class="price">$5</span></h4>
                        <p>Black, green, or herbal</p>
                        <span class="dietary">V</span>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="menu-item h-100">
                        <h4>Fresh Juice <span class="price">$7</span></h4>
                        <p>Orange, grapefruit, or apple</p>
                        <span class="dietary">V</span><span class="dietary">GF</span>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="menu-item h-100">
                        <h4>Smoothie of the Day <span class="price">$9</span></h4>
                        <p>Made with seasonal fruits and yogurt</p>
                        <span class="dietary">V</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Lunch Menu -->
    <section id="lunch" class="menu-section">
        <h2 class="display-5 mb-4">Lunch</h2>
        <p class="text-center mb-5">Served daily from 11:30 AM to 2:30 PM</p>

        <div class="menu-category">
            <h3>Starters</h3>
            <div class="row menu-items">
                <div class="col-md-4 mb-4">
                    <div class="menu-item h-100">
                        <h4>Soup of the Day <span class="price">$12</span></h4>
                        <p>Chef's daily creation served with artisanal bread</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="menu-item h-100">
                        <h4>Caesar Salad <span class="price">$15</span></h4>
                        <p>Romaine lettuce, parmesan crisp, garlic croutons, and house-made dressing</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="menu-item h-100">
                        <h4>Caprese Salad <span class="price">$16</span></h4>
                        <p>Heirloom tomatoes, fresh mozzarella, basil, and balsamic reduction</p>
                        <span class="dietary">V</span><span class="dietary">GF</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="menu-category">
            <h3>Main Courses</h3>
            <div class="row menu-items">
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="menu-item h-100">
                        <h4>Grilled Chicken Sandwich <span class="price">$18</span></h4>
                        <p>Herb-marinated chicken breast, avocado, bacon, and aioli on ciabatta bread</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="menu-item h-100">
                        <h4>Mediterranean Vegetable Wrap <span class="price">$16</span></h4>
                        <p>Grilled vegetables, hummus, feta cheese in a spinach wrap</p>
                        <span class="dietary">V</span>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="menu-item h-100">
                        <h4>Seared Salmon <span class="price">$26</span></h4>
                        <p>With quinoa, roasted vegetables, and lemon herb sauce</p>
                        <span class="dietary">GF</span>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="menu-item h-100">
