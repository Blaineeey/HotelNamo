@using Microsoft.AspNetCore.Identity
@using HotelNamo.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>@ViewData["Title"] - HotelNamo Admin</title>
    <meta name="description" content="HotelNamo admin layout" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="#" class="brand-logo">
                    <span class="brand-text">HotelNamo</span>
                </a>
                <button id="sidebar-toggler-close" class="toggler-close d-md-none">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="sidebar-user">
                @if (SignInManager.IsSignedIn(User))
                {
                    var user = await UserManager.GetUserAsync(User);
                    <div class="user-info">
                        <div class="user-avatar">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <div class="user-details">
                            <h6 class="user-name">@user.FirstName @user.LastName</h6>
                            <span class="user-role">Administrator</span>
                        </div>
                    </div>
                }
            </div>

            <div class="sidebar-menu">
                <div class="menu-category">
                    <p class="menu-title">Main Navigation</p>
                    <ul class="nav-list">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-tachometer-alt"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="AdminProfile">
                                <i class="fas fa-user-cog"></i>
                                <span>Profile</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="menu-category">
                    <p class="menu-title">Management</p>
                    <ul class="nav-list">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="ListUsers">
                                <i class="fas fa-users"></i>
                                <span>User Management</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="RoomList">
                                <i class="fas fa-bed"></i>
                                <span>Room Management</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="AllBookings">
                                <i class="fas fa-calendar-check"></i>
                                <span>All Bookings</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="menu-category">
                    <p class="menu-title">Operations</p>
                    <ul class="nav-list">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FrontDesk" asp-action="Rooms">
                                <i class="fas fa-concierge-bell"></i>
                                <span>Front Desk</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Housekeeping" asp-action="Index">
                                <i class="fas fa-broom"></i>
                                <span>Housekeeping</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Maintenance" asp-action="Index">
                                <i class="fas fa-tools"></i>
                                <span>Maintenance</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Amenities" asp-action="ManageSpaBookings">
                                <i class="fas fa-spa"></i>
                                <span>Spa Bookings</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dining" asp-action="Modify">
                                <i class="fas fa-utensils"></i>
                                <span>Dining Reservations</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="menu-category">
                    <p class="menu-title">Reports</p>
                    <ul class="nav-list">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reports" asp-action="BookingsReport">
                                <i class="fas fa-clipboard-list"></i>
                                <span>Booking Report</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reports" asp-action="RevenueReport">
                                <i class="fas fa-money-bill-wave"></i>
                                <span>Revenue Report</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reports" asp-action="OccupancyReport">
                                <i class="fas fa-hotel"></i>
                                <span>Room Occupancy</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="ManageFeedback">
                                <i class="fas fa-comment-alt"></i>
                                <span>Feedback Reports</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <header class="header">
                <div class="header-left">
                    <button id="sidebar-toggler" class="sidebar-toggle">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>

                <div class="header-right">
                    <div class="header-notification">
                        <a href="#" class="notification-bell">
                            <i class="fas fa-bell"></i>
                            <span class="badge">3</span>
                        </a>
                    </div>

                    <div class="header-user dropdown">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var user = await UserManager.GetUserAsync(User);
                            <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown">
                                <div class="user-avatar-sm">
                                    <i class="fas fa-user-circle"></i>
                                </div>
                                <span class="user-name-sm">@user.FirstName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="AdminProfile"><i class="fas fa-user me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
                                    </form>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </header>

            <!-- Main Content Area -->
            <div class="content-wrapper">
                <div class="page-header">
                    <h1 class="page-title">@ViewData["Title"]</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                        </ol>
                    </nav>
                </div>

                <div class="content-container">
                    @RenderBody()
                </div>
            </div>

            <!-- Footer -->
            <footer class="footer">
                <div class="footer-content">
                    <p>&copy; @DateTime.Now.Year - HotelNamo Admin Dashboard</p>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sidebar Toggle Functionality
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggler = document.getElementById('sidebar-toggler');
            const sidebarTogglerClose = document.getElementById('sidebar-toggler-close');
            const sidebar = document.getElementById('sidebar');
            const adminWrapper = document.querySelector('.admin-wrapper');

            sidebarToggler.addEventListener('click', function() {
                adminWrapper.classList.toggle('sidebar-open');
            });

            sidebarTogglerClose.addEventListener('click', function() {
                adminWrapper.classList.remove('sidebar-open');
            });

            // Auto-close sidebar on small screens when clicking menu items
            const navLinks = document.querySelectorAll('.sidebar .nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', function() {
                    if (window.innerWidth < 992) {
                        adminWrapper.classList.remove('sidebar-open');
                    }
                });
            });

            // Active menu item
            const currentLocation = window.location.href;
            navLinks.forEach(link => {
                if (link.href === currentLocation) {
                    link.classList.add('active');
                    // Add active class to parent menu item if in dropdown
                    const parentItem = link.closest('.nav-item');
                    if (parentItem) {
                        parentItem.classList.add('active');
                    }
                }
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>