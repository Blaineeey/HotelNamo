@{
    // Do not reference "_Layout"; we want a standalone admin layout.
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Optionally include Bootstrap CSS from your existing setup -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        /* Remove default padding/margins on container and row */
        .container-fluid {
            padding: 0;
            margin: 0;
        }

        .row.no-gutters {
            margin: 0;
            padding: 0;
        }

        /* Sidebar styling */
        .sidebar {
            background-color: #f0f0f0; /* Light gray */
            border-right: 1px solid #ccc;
            min-height: 100vh; /* Full viewport height */
            padding: 10px;
        }

            /* Nav links with white box backgrounds */
            .sidebar .nav-link {
                display: block;
                margin-bottom: 10px;
                padding: 10px;
                background-color: #fff;
                border: 1px solid #ccc;
                border-radius: 4px;
                color: #333;
                text-decoration: none;
            }

                .sidebar .nav-link:hover {
                    background-color: #e9ecef; /* Slightly darker gray on hover */
                }

        /* Main content is white, no extra margin/padding */
        .main-content {
            background-color: #fff;
            min-height: 100vh;
            padding: 20px;
        }
        /* A simple top bar for profile & logout */
        .top-bar {
            border-bottom: 1px solid #ccc;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 10px 20px;
        }

            .top-bar .profile-img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                cursor: pointer;
                margin-right: 150px;
				border: 1px solid #111;
            }

        .content-body {
            padding: 20px;
        }
    </style>
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row no-gutters">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar">
                <h4>Admin Menu</h4>
                <div class="top-bar">
                    <!-- Profile image (click to go to Admin Profile) -->
                    <img src="~/images/profile.png" alt="Profile" class="profile-img"
                         onclick="location.href='@Url.Action("AdminProfile", "Admin")'" />

                    <!-- Logout button -->
                    <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                        <button type="submit" class="btn btn-danger">Logout</button>
                    </form>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="ListUsers">User Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="RoomList">Room Inventory</a>
                    </li>
                                        <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="CreateStaff">Create Staff</a>
                    </li>
                    <!-- Add more admin links as needed -->
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Optionally include Bootstrap JS from your existing setup -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
