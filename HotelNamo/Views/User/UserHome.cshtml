@model HotelNamo.Models.UserDashboardModel

<h2>Welcome to Your Dashboard</h2>
<p>Manage your reservations and account here.</p>

<div class="row">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5>Total Reservations</h5>
                <h3>@Model.TotalReservations</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5>Total Amount Spent</h5>
                <h3>$@Model.TotalSpent</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning text-white">
            <div class="card-body">x`
                <h5>Last Room Booked</h5>
                <h3>@Model.LastRoomBooked</h3>
            </div>
        </div>
    </div>
</div>

<a href="@Url.Action("BookRoom", "User")" class="btn btn-primary">Book a Room</a>
<a href="@Url.Action("ViewReservations", "User")" class="btn btn-secondary">View My Reservations</a>

<form asp-action="Logout" method="post">
    <button type="submit" class="btn btn-danger">Logout</button>
</form>
