@model HotelNamo.Models.Room
@{
    ViewData["Title"] = "Edit Room";
    Layout = "_AdminLayout";
}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-edit me-2"></i>Edit Room #@Model.RoomNumber</h4>
            <a asp-action="RoomList" class="btn btn-outline-secondary btn-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="EditRoom" method="post">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="RoomNumber" class="form-label">Room Number</label>
                        <input asp-for="RoomNumber" class="form-control" required />
                        <span asp-validation-for="RoomNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="FloorNumber" class="form-label">Floor Number</label>
                        <input asp-for="FloorNumber" type="number" class="form-control" required />
                        <span asp-validation-for="FloorNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Category" class="form-label">Category</label>
                        <select asp-for="Category" class="form-select" required>
                            <option value="">-- Select Category --</option>
                            <option>Single</option>
                            <option>Double</option>
                            <option>Suite</option>
                            <option>Family</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Price</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Status</label>
                        <select asp-for="Status" class="form-select" required>
                            <option>Vacant</option>
                            <option>Occupied</option>
                            <option>Reserved</option>
                            <option>Maintenance</option>
                            <option>Cleaning</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Room Image</label>
                        <select name="selectedImage" class="form-select" required>
                            @foreach (var image in ViewBag.ExistingImages)
                            {
                                if (ViewBag.CurrentImage == image)
                                {
                                    <option value="@image" selected>@image</option>
                                }
                                else
                                {
                                    <option value="@image">@image</option>
                                }
                            }
                        </select>
                        <div class="mt-2">
                            <img id="imagePreview" src="@Url.Content($"~/images/rooms/{ViewBag.CurrentImage}")"
                                 class="img-thumbnail" style="max-height: 150px;" alt="Room Image Preview" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Room Amenities</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var amenity in ViewBag.Amenities)
                        {
                            var isChecked = ViewBag.SelectedAmenities.Contains(amenity.Id);
                            <div class="col-md-4 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="selectedAmenities"
                                           value="@amenity.Id" id="amenity-@amenity.Id" @(isChecked ? "checked" : "") />
                                    <label class="form-check-label" for="amenity-@amenity.Id">
                                        @amenity.Name
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="RoomList" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-save me-1"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Image preview
        document.querySelector('select[name="selectedImage"]').addEventListener('change', function() {
            const selectedImage = this.value;
            const imageUrl = `/images/rooms/${selectedImage}`;
            document.getElementById('imagePreview').src = imageUrl;
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}