@model HotelNamo.Models.BookingViewModel;
@{
    ViewData["Title"] = "Book a Room";
}
<h2>Book a Room</h2>
<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <label>Select Room:</label>
    <select asp-for="RoomId" class="form-control" required>
        <option value="">-- Select Room --</option>
        @foreach (var room in ViewBag.Rooms)
        {
            <option value="@room.Id">@room.RoomNumber - @room.Category (@room.Price.ToString("C"))</option>
        }
    </select>
    <label>Check-in Date:</label>
    <input asp-for="CheckInDate" class="form-control" type="date" required />
    <label>Check-out Date:</label>
    <input asp-for="CheckOutDate" class="form-control" type="date" required />
    <label>Special Requests:</label>
    <textarea asp-for="SpecialRequests" class="form-control"></textarea>
    <button class="btn btn-primary mt-3">Book Now</button>
</form>
