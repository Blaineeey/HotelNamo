@model HotelNamo.Models.Room

<h2>Room @Model.RoomNumber Details</h2>

<div>
    <img src="~/images/rooms/@Model.RoomImages.FirstOrDefault()?.ImagePath"
         alt="Room Image" width="400" class="img-fluid" />

    <p><strong>Category:</strong> @Model.Category</p>
    <p><strong>Floor:</strong> @Model.FloorNumber</p>
    <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Description:</strong> @Model.Description</p>

    <h4>
        Amenities:</h2>
        <ul>
            @foreach (var amenity in Model.RoomAmenities)
            {
                <li>@amenity.Amenity.Name</li>
            }
        </ul>

        <a asp-action="Create" asp-controller="Booking" asp-route-roomId="@Model.Id" class="btn btn-primary">Book Now</a>
        <a asp-action="Index" class="btn btn-secondary">Back to Rooms</a>
