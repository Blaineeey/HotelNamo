@model List<HotelNamo.Models.Room>

<h2>Available Rooms</h2>

<table class="table">
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Category</th>
            <th>Price</th>
            <th>Status</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomNumber</td>
                <td>@room.Category</td>
                <td>@room.Price.ToString("C")</td>
                <td>@room.Status</td>
                <td>
                    <img src="~/images/rooms/@room.RoomImages.FirstOrDefault()?.ImagePath"
                         alt="Room Image" width="120" height="80" />

                    <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-secondary btn-sm">View Details</a>
                    <a asp-action="Create" asp-controller="Booking" asp-route-roomId="@room.Id" class="btn btn-primary btn-sm">Book Now</a>
                </td>
            </tr>
        }
    </tbody>
</table>
