@{
    Layout = "_UserLayout";
    ViewData["Title"] = "Contact Us";
}

@section Styles {
    <style>
        .contact-header {
            background-color: #f8f9fa;
            padding: 80px 0;
            text-align: center;
        }

            .contact-header h1 {
                font-size: 3.5rem;
                color: #333;
                margin-bottom: 20px;
            }

        .subtitle {
            color: #B59C7E;
            font-weight: 600;
            letter-spacing: 1px;
            margin-bottom: 20px;
            text-transform: uppercase;
        }

        .divider {
            height: 3px;
            width: 60px;
            background-color: #B59C7E;
            margin: 20px 0;
        }

        .contact-section {
            padding: 80px 0;
        }

        .contact-info-card {
            padding: 30px;
            background-color: #f8f9fa;
            height: 100%;
            transition: all 0.3s ease;
        }

            .contact-info-card:hover {
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
                transform: translateY(-5px);
            }

            .contact-info-card i {
                font-size: 2.5rem;
                color: #B59C7E;
                margin-bottom: 20px;
            }

            .contact-info-card h3 {
                margin-bottom: 15px;
            }

        .contact-form {
            background-color: #fff;
            padding: 40px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        }

            .contact-form .form-control {
                padding: 12px;
                border-radius: 0;
                margin-bottom: 20px;
                border: 1px solid #ddd;
            }

                .contact-form .form-control:focus {
                    box-shadow: none;
                    border-color: #B59C7E;
                }

        .btn-primary {
            background-color: #B59C7E;
            border-color: #B59C7E;
            padding: 12px 30px;
            border-radius: 0;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #a38968;
                border-color: #a38968;
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

        .map-container {
            height: 450px;
            position: relative;
            overflow: hidden;
        }

        .department-card {
            padding: 30px;
            margin-bottom: 30px;
            transition: all 0.3s ease;
            background-color: #fff;
            border-left: 4px solid #B59C7E;
        }

            .department-card:hover {
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

        .social-links {
            margin-top: 30px;
        }

            .social-links a {
                display: inline-block;
                margin-right: 15px;
                width: 40px;
                height: 40px;
                line-height: 40px;
                text-align: center;
                background-color: #f8f9fa;
                color: #B59C7E;
                border-radius: 50%;
                transition: all 0.3s ease;
            }

                .social-links a:hover {
                    background-color: #B59C7E;
                    color: #fff;
                    transform: translateY(-3px);
                }
    </style>
}

<!-- Contact Header Section -->
<section class="contact-header">
    <div class="container">
        <div class="row">
            <div class="col-md-10 mx-auto text-center">
                <p class="subtitle">Get in Touch</p>
                <h1>Contact Us</h1>
                <div class="divider mx-auto"></div>
                <p class="lead mt-4">We're here to answer any questions you may have about our hotel and services</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Information Section -->
