@{
    Layout = "_UserLayout";
    ViewData["Title"] = "Welcome to HotelNamo";
}
<link rel="stylesheet" href="~/css/home-style.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="hero-section text-center text-white py-5">
    <h1 class="display-4">Welcome to HotelNamo</h1>
    <p class="lead">Experience comfort and luxury at an affordable price.</p>
    <p>Discover an unforgettable stay with premium rooms and top-notch amenities.</p>
    <div class="button-group d-inline-flex gap-2">
        <a class="btn btn-primary btn-lg px-4" asp-controller="UserRoom" asp-action="Index">View Rooms</a>
        <a class="btn btn-outline-dark btn-lg px-4" asp-controller="Home" asp-action="About">Learn More</a>
    </div>
</div>

<div class="container my-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h2 class="about-title">About Us</h2>
            <h1 class="about-heading">Unwind A Hotel Booking Agency</h1>
            <p class="about-description">
                HotelNamo is your home away from home. Enjoy our deluxe, suite,
                and standard rooms for all types of travelers. Our friendly staff
                and modern amenities ensure a wonderful stay. Far far away, behind the word
                mountains, far from the countries Vokalia and Consonantia, there live the blind texts.
                Separated they live in Bookmarksgrove right at the coast of the Semantics,
                a large language ocean.
            </p>
            <a class="btn btn-about px-4" asp-controller="Home" asp-action="About">Book Your Room Now</a>
        </div>
        <div class="col-md-6">
            <img src="~/images/superior-room.jpg" class="img-fluid rounded shadow" alt="Hotel Lobby" />
        </div>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4">Explore Our Hotel Services</h2>
    <div class="row justify-content-center">
        <div class="col-auto service-icon">
            <div class="icon-wrapper">
                <i class="fas fa-wifi"></i>
            </div>
            <p>Free Wifi</p>
        </div>
        <div class="col-auto service-icon">
            <div class="icon-wrapper">
                <i class="fas fa-concierge-bell"></i>
            </div>
            <p>Easy Booking</p>
        </div>
        <div class="col-auto service-icon">
            <div class="icon-wrapper">
                <i class="fas fa-utensils"></i>
            </div>
            <p>Restaurant</p>
        </div>
        <div class="col-auto service-icon">
            <div class="icon-wrapper active">
                <i class="fas fa-spa"></i>
            </div>
            <p>Beauty & Health</p>
        </div>
        <div class="col-auto service-icon">
            <div class="icon-wrapper">
                <i class="fas fa-swimmer"></i>
            </div>
            <p>Swimming Pool</p>
        </div>
        <div class="col-auto service-icon">
            <div class="icon-wrapper">
                <i class="fas fa-hands-helping"></i>
            </div>
            <p>Help & Support</p>
        </div>
    </div>
</div>


