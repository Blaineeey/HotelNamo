@{
    ViewData["Title"] = "Rooms";
}
<link rel="stylesheet" href="/css/rooms.css">

<div class="text-center">
    <h1 class="display-4">Welcome to HotelNamo</h1>
    <p>Book a comfortable stay with us.</p>
</div>

<section class="rooms">
    <h2 class="text-center">Our Rooms</h2>
    <div class="categories text-center">
        <button class="filter-btn" onclick="filterRooms('all')">All</button>
        <button class="filter-btn" onclick="filterRooms('superior')">Superior Room</button>
        <button class="filter-btn" onclick="filterRooms('deluxe')">Deluxe Room</button>
        <button class="filter-btn" onclick="filterRooms('guest')">Guest Room</button>
        <button class="filter-btn" onclick="filterRooms('single')">Single Room</button>
    </div>
    <div class="room-container">
        <div class="room-card superior">
            <img src="/images/superior-room.jpg" alt="Superior Room">
            <h3>Superior Room</h3>
            <div class="icons">
                <span>&#128246;</span> <span>&#127828;</span> <span>&#128704;</span> <span>&#127925;</span>
            </div>
            <button class="book-btn">Book</button>
        </div>
        <div class="room-card deluxe">
            <img src="/images/deluxe-room.jpg" alt="Deluxe Room">
            <h3>Deluxe Room</h3>
            <div class="icons">
                <span>&#128246;</span> <span>&#127828;</span> <span>&#128704;</span>
            </div>
            <button class="book-btn">Book</button>
        </div>
        <div class="room-card guest">
            <img src="/images/guest-room.jpg" alt="Guest Room">
            <h3>Guest Room</h3>
            <div class="icons">
                <span>&#128246;</span> <span>&#127828;</span> <span>&#128144;</span>
            </div>
            <button class="book-btn">Book</button>
        </div>
        <div class="room-card single">
            <img src="/images/single-room.jpg" alt="Single Room">
            <h3>Single Room</h3>
            <div class="icons">
                <span>&#128246;</span> <span>&#127828;</span>
            </div>
            <button class="book-btn">Book</button>
        </div>
    </div>
</section>

<script>
    function filterRooms(category) {
        let rooms = document.querySelectorAll('.room-card');
        rooms.forEach(room => {
            if (category === 'all' || room.classList.contains(category)) {
                room.style.display = 'block';
            } else {
                room.style.display = 'none';
            }
        });
    }
</script>