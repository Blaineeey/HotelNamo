@using Microsoft.AspNetCore.Identity
@using HotelNamo.Models
@inject UserManager<ApplicationUser> UserManager
@{
    Layout = "_UserLayout";
    ViewData["Title"] = "User Dashboard";

    // Get current user data
    var user = await UserManager.GetUserAsync(User);
    var userName = user?.FirstName ?? "Guest";
}

<!-- User Dashboard Header Section -->
<div class="user-dashboard-header py-5 mb-4" style="background-color: #f8f9fa; border-bottom: 1px solid #e9ecef;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2" style="color: #b29674; font-family: 'Playfair Display', serif; font-size: 2.5rem; font-weight: bold;">Welcome back, @userName</h1>
                <p class="about-description">Manage your stay and explore our exclusive offers designed just for you.</p>
            </div>
            <div class="col-md-4 text-md-end">
                <div class="d-flex justify-content-md-end">
                    <span class="badge rounded-pill" style="background-color: #b29674; padding: 8px 12px; margin-right: 8px;">
                        <i class="fas fa-user-circle me-1"></i> Member
                    </span>
                    @if (user?.Preferences?.Contains("VIP") == true)
                    {
                        <span class="badge rounded-pill bg-warning text-dark p-2">
                            <i class="fas fa-crown me-1"></i> VIP
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <!-- Quick Actions Row -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="d-flex flex-wrap">
                        <a href="/UserRoom" class="quick-action-btn flex-fill py-3 px-4 text-center">
                            <i class="fas fa-calendar-plus fa-lg mb-2" style="color: #b29674;"></i>
                            <span class="d-block">New Booking</span>
                        </a>
                        <a href="/Booking/MyBookings" class="quick-action-btn flex-fill py-3 px-4 text-center">
                            <i class="fas fa-list-alt fa-lg mb-2" style="color: #b29674;"></i>
                            <span class="d-block">My Bookings</span>
                        </a>
                        <a href="/Amenities" class="quick-action-btn flex-fill py-3 px-4 text-center">
                            <i class="fas fa-spa fa-lg mb-2" style="color: #b29674;"></i>
                            <span class="d-block">Amenities</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Dashboard Content -->
    <div class="row">
        <!-- Left Column: Profile and Activity -->
        <div class="col-lg-4 mb-4">
            <!-- Profile Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body text-center py-4">
                    <div class="profile-icon-container mb-3">
                        <i class="fas fa-user-circle fa-5x" style="color: #b29674;"></i>
                    </div>
                    <h4 class="mb-1">@user?.FirstName @user?.LastName</h4>
                    <p class="text-muted mb-3">@user?.Email</p>
                    <div class="d-grid">
                        <a href="/Account/Profile" class="btn" style="background-color: #b29674; color: white;">
                            <i class="fas fa-edit me-2"></i>Edit Profile
                        </a>
                    </div>
                </div>
                <div class="card-footer bg-white p-0">
                    <div class="row g-0 text-center">
                        <div class="col-6 border-end py-3">
                            <h5 class="mb-0">@ViewBag.BookingsCount</h5>
                            <small class="text-muted">Stays</small>
                        </div>
                        <div class="col-6 py-3">
                            <h5 class="mb-0">@ViewBag.FeedbackCount</h5>
                            <small class="text-muted">Reviews</small>
                        </div>
                    </div>
                </div>
            </div>


        </div>

        <!-- Right Column: Cards and Actions -->
        <div class="col-lg-8">
            <!-- Current Bookings Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-bookmark" style="color: #b29674; margin-right: 8px;"></i>Your Bookings</h5>
                    <a href="/Booking/MyBookings" class="btn btn-sm" style="border-color: #b29674; color: #b29674;">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @if (ViewBag.RecentBooking != null)
                        {
                            <div class="list-group-item p-3">
                                <div class="d-flex w-100 justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@ViewBag.RecentBooking.Room.Category - @ViewBag.RecentBooking.Room.RoomNumber</h6>
                                        <small class="text-muted">
                                            <i class="far fa-calendar-alt me-1"></i>
                                            @ViewBag.RecentBooking.CheckInDate.ToString("MMM dd") - @ViewBag.RecentBooking.CheckOutDate.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                    <span class="badge rounded-pill @(ViewBag.RecentBooking.IsConfirmed ? "bg-success" : "bg-warning text-dark")">
                                        @(ViewBag.RecentBooking.IsConfirmed ? "Confirmed" : "Pending")
                                    </span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="list-group-item p-4 text-center">
                                <i class="fas fa-hotel fa-2x mb-3 text-muted"></i>
                                <p class="mb-0">No bookings found. Ready to plan your stay?</p>
                                <a href="/Booking/Create" class="btn btn-sm" style="background-color: #b29674; color: white; margin-top: 10px;">Make Your First Booking</a>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Featured Rooms & Services -->
            <div class="row">
                <!-- Room Recommendations -->
                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0"><i class="fas fa-bed" style="color: #b29674; margin-right: 8px;"></i>Recommended Rooms</h5>
                        </div>
                        <div class="card-body p-0">
                            @if (ViewBag.RecommendedRooms != null && ((System.Collections.Generic.List<HotelNamo.Models.Room>)ViewBag.RecommendedRooms).Count > 0)
                            {
                                var rooms = (System.Collections.Generic.List<HotelNamo.Models.Room>)ViewBag.RecommendedRooms;
                                for (int i = 0; i < rooms.Count; i++)
                                {
                                    var room = rooms[i];
                                    bool isLast = (i == rooms.Count - 1);
                                    <div class="p-3 @(!isLast ? "border-bottom" : "")">
                                        <div class="d-flex">
                                            <div class="flex-shrink-0">
                                                @{
                                                    string imagePath = "/images/rooms/room-placeholder.jpg";
                                                    if (room.RoomImages != null && room.RoomImages.Count > 0)
                                                    {
                                                        imagePath = room.RoomImages.First().ImagePath;
                                                    }
                                                }
                                                <div class="room-img-thumbnail" style="background-image: url('@imagePath'); width: 80px; height: 80px; background-size: cover; background-position: center; border-radius: 8px;"></div>
                                            </div>
                                            <div class="ms-3">
                                                <h6 class="mb-1">@room.Category</h6>
                                                <p class="text-muted small mb-2">
                                                    @(string.IsNullOrEmpty(room.Description) ? "Room " + room.RoomNumber + ", Floor " + room.FloorNumber : room.Description)
                                                </p>
                                                <span class="fw-bold">$@room.Price</span><span class="text-muted">/night</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="p-4 text-center">
                                    <i class="fas fa-bed fa-2x mb-3 text-muted"></i>
                                    <p class="mb-0">Explore our wonderful room options</p>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-white text-center py-3">
                            <a href="/UserRoom/Index" class="btn btn-sm" style="border-color: #b29674; color: #b29674;">View All Rooms</a>
                        </div>
                    </div>
                </div>

                <!-- Amenities -->
                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0"><i class="fas fa-concierge-bell" style="color: #b29674; margin-right: 8px;"></i>Hotel Services</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                <a href="/Amenities/Spa" class="list-group-item list-group-item-action p-3">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Spa & Wellness</h6>
                                            <small class="text-muted">Relax and rejuvenate</small>
                                        </div>
                                        <i class="fas fa-chevron-right text-muted"></i>
                                    </div>
                                </a>
                                <a href="/Amenities/Fitness" class="list-group-item list-group-item-action p-3">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Fitness Center</h6>
                                            <small class="text-muted">Stay fit during your stay</small>
                                        </div>
                                        <i class="fas fa-chevron-right text-muted"></i>
                                    </div>
                                </a>
                                <a href="/Amenities/Food" class="list-group-item list-group-item-action p-3">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Fine Dining</h6>
                                            <small class="text-muted">Experience culinary excellence</small>
                                        </div>
                                        <i class="fas fa-chevron-right text-muted"></i>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

<style>
    /* Additional styles for the user dashboard */
    .quick-action-btn {
        text-decoration: none;
        color: #333;
        transition: all 0.3s;
        border-right: 1px solid #f0f0f0;
    }

        .quick-action-btn:last-child {
            border-right: none;
        }

        .quick-action-btn:hover {
            background-color: #f8f9fa;
            color: #b29674;
        }

    .profile-icon-container {
        width: 100px;
        height: 100px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        border-radius: 50%;
    }

    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .list-group-item-action:hover {
        background-color: #f8f9fa;
    }

    /* Font styles to match home page */
    h4, h5, h6 {
        font-family: 'Playfair Display', serif;
    }

    .about-description {
        font-size: 18px;
        color: #777;
        line-height: 1.6;
        margin-bottom: 30px;
    }

    /* Button styles to match home page */
    .btn {
        border-radius: 30px;
        text-transform: uppercase;
        transition: all 0.3s ease;
    }

    /* Responsive adjustments */
    @@ media (max-width: 992px) {
        .quick-action-btn

    {
        border-right: none;
        border-bottom: 1px solid #f0f0f0;
    }

    .quick-action-btn:last-child {
        border-bottom: none;
    }

    }

    @@ media (max-width: 768px) {
        .user-dashboard-header h1

    {
        font-size: 1.8rem;
    }

    }
</style>