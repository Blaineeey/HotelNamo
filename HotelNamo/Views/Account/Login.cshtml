@model HotelNamo.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <div class="auth-content">
        <!-- Form on the left for login page -->
        <div class="form-wrapper slide-in">
            <div class="login-card">
                <div class="login-header">
                    <h1>Login</h1>
                    <p class="login-subtitle">Enter your credentials to access your account</p>
                </div>
                
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                
                <div class="login-body">
                    <form asp-action="Login" method="post" id="loginForm">
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <span asp-validation-for="Email" class="validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="validation-error"></span>
                        </div>

                        <div class="form-group remember-me">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="login-button" id="loginButton">
                                <span class="btn-text">Login</span>
                                <div class="lds-ring" id="loadingSpinner" style="display: none;">
                                    <div></div><div></div><div></div><div></div>
                                </div>
                            </button>
                        </div>
                        <div class="forgot-password">
                            <a href="#">Forgot your password?</a>
                        </div>
                    </form>
                </div>

                <div class="login-footer">
                    <p>Don't have an account? <a href="@Url.Action("Register", "Account")" class="slide-link" data-direction="right">Register</a></p>
                </div>
            </div>
        </div>

        <!-- Logo on right side for login page -->
        <div class="logo-container logo-right" id="logoContainer">
            <div class="logo">
                <img src="~/images/logo.png" alt="HotelNamo Logo" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/login-styles.css" />
	<script src="~/js/loading.js"></script>
    <script src="~/js/page-transition.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}